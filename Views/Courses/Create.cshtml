@model Course

<form asp-controller="Courses" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="flex justify-center">
        <div class="w-[750px]">

            <label class="form-control my-4">
                <div class="label">
                    <span class="label-text">Name</span>
                </div>
                <input asp-for="Title" type="text" placeholder="Type here" class="input input-bordered" />
            </label>

            <label class="form-control my-4">
                <div class="label">
                    <span class="label-text">Description</span>
                </div>
                <input asp-for="Description" type="text" placeholder="Type here" class="input input-bordered" />
            </label>

            <label class="form-control w-full max-w-xs">
                <div class="label my-4">
                    <span class="label-text">SubCategory</span>
                </div>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="select select-bordered">
                    <option disabled selected>Pick one</option>
                </select>
            </label>

            <button type="submit" class="btn btn-success w-full">Add</button>
        </div>
    </div>
</form>
