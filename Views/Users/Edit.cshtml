@model User

<form asp-controller="Users" asp-action="Edit" method="post">
  <div class="flex justify-center">
    <div class="w-[750px]">

      <input type="hidden" asp-for="Id" />

      <label class="form-control my-4">
        <div class="label">
          <span class="label-text">
          </span>
        </div>
        <input asp-for="FirstName" type="text" placeholder="Type here" class="input input-bordered" />
      </label>

      <label class="form-control my-4">
        <div class="label">
          <span class="label-text">LastName</span>
        </div>
        <input asp-for="LastName" type="text" placeholder="Type here" class="input input-bordered" />
      </label>

      <label class="form-control w-full max-w-xs">
        <div class="label my-4">
          <span class="label-text">Role</span>
        </div>
        <select asp-for="RoleId" asp-items="ViewBag.Roles" class="select select-bordered">
          <option disabled selected>Select Role</option>
        </select>
      </label>

      <label class="form-control my-4">
        <div class="label">
          <span class="label-text">Email</span>
        </div>
        <input asp-for="Email" type="text" placeholder="Type here" class="input input-bordered" />
      </label>

      <label class="form-control my-4">
        <div class="label">
          <span class="label-text">Password</span>
        </div>
        <input asp-for="Password" type="text" placeholder="Type here" class="input input-bordered" />
      </label>

      <button type="submit" class="btn btn-primary w-full">Update</button>

    </div>
  </div>
</form>
