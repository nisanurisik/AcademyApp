@model User

<div class="container mx-auto my-10">
    <div class="flex flex-col lg:flex-row justify-center items-center gap-8">
        <!-- Image Section -->
        <div class="w-full md:w-1/2 flex justify-center">
            <img src="~/img/user/Register.webp" alt="Signup Illustration" class="max-w-xs lg:max-w-sm rounded-xl">
        </div>

        <!-- Form Section -->
        <div class="w-full lg:w-1/2">
            <h2 class="text-2xl font-bold text-gray-800">Get Start Archive</h2>
            <p class="text-gray-500 mt-2">Welcome to ArchiveApp! Enter your email to get started.</p>

            <form asp-controller="Users" asp-action="Register" method="post" class="mt-6 space-y-4 w-[75%]">

                <div class="flex flex-col gap-4">

                    <label class="input input-bordered flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor"
                            class="h-4 w-4 opacity-70">
                            <path
                                d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z" />
                        </svg>
                        <input asp-for="FirstName" type="text" class="grow" placeholder="First Name" />
                    </label>
                    <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>

                    <label class="input input-bordered flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor"
                            class="h-4 w-4 opacity-70">
                            <path
                                d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z" />
                        </svg>
                        <input asp-for="LastName" type="text" class="grow" placeholder="Last Name" />
                    </label>
                    <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>

                    <label class="input input-bordered flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor"
                            class="h-4 w-4 opacity-70">
                            <path
                                d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
                            <path
                                d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
                        </svg>
                        <input asp-for="Email" type="text" class="grow" placeholder="Email" />
                    </label>
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>

                    <label class="input input-bordered flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor"
                            class="h-4 w-4 opacity-70">
                            <path fill-rule="evenodd"
                                d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
                                clip-rule="evenodd" />
                        </svg>
                        <input asp-for="Password" type="password" class="grow" placeholder="********" />
                    </label>
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>

                    <!-- Register Button -->
                    <button type="submit" class="btn btn-primary w-full">
                        Register
                    </button>
                </div>

                <small class="block mt-4 text-center text-gray-600">
                    By continuing, you agree to our
                    <a href="#" class="link link-primary">Terms of Service</a>
                    and
                    <a href="#" class="link link-primary">Privacy Policy</a>.
                </small>
            </form>
        </div>
    </div>
</div>