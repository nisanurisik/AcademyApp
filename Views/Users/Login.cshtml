@model User

<section class="container mx-auto my-10">
    <div class="flex flex-col lg:flex-row justify-center items-center gap-8">
        <!-- Görsel Alanı -->
        <div class="w-full md:w-1/2 flex justify-center">
            <img src="~/img/user/Login.webp" alt="Login Illustration" class="max-w-xs lg:max-w-sm rounded-xl">
        </div>

        <!-- Form Alanı -->
        <div class="w-full md:w-1/2">
            <h2 class="text-2xl font-bold text-gray-800">Sign in to ArchiveApp</h2>
            <p class="text-gray-600 mt-2">Welcome back! Please enter your credentials to access your account.</p>

            <!-- Giriş Formu -->
            <form asp-controller="Users" asp-action="Login" method="post" class="mt-6 space-y-4 w-[75%]">
                <!-- Genel Hata Mesajı -->
                @if (!string.IsNullOrEmpty(ViewData.ModelState[string.Empty]?.Errors?.FirstOrDefault()?.ErrorMessage))
                {
                    <div class="text-red-500 text-sm">
                        @ViewData.ModelState[string.Empty].Errors.First().ErrorMessage
                    </div>
                }

                <label class="input input-bordered flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor"
                        class="h-4 w-4 opacity-70">
                        <path
                            d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
                        <path
                            d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
                    </svg>
                    <input asp-for="Email" type="text" class="grow" placeholder="Email" />
                </label>
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>

                <label class="input input-bordered flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor"
                        class="h-4 w-4 opacity-70">
                        <path fill-rule="evenodd"
                            d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
                            clip-rule="evenodd" />
                    </svg>
                    <input asp-for="Password" type="password" class="grow" placeholder="********" />
                </label>
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>

                @* <!-- Hatırla ve Şifremi Unuttum -->
                <div class="flex justify-between items-center text-sm">
                    <label class="flex items-center space-x-2">
                        <input type="checkbox" class="checkbox checkbox-primary" id="rememberMe" />
                        <span>Remember me</span>
                    </label>
                    <a href="#" class="link link-primary">Forgot password?</a>
                </div> *@

                <!-- Giriş Butonu -->
                <div>
                    <button type="submit" class="btn btn-primary w-full">Login</button>
                </div>

                <!-- Kayıt Ol Linki -->
                <p class="text-center text-sm">
                    Don’t have an account?
                    <a asp-controller="Users" asp-action="Register" class="link link-primary">Register</a>
                </p>
            </form>
        </div>
    </div>
</section>
