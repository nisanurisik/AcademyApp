@model Student

<form asp-controller="Students" asp-action="Create" method="post">
  <div class="flex justify-center">
    <div class="w-[750px]">

      <label class="form-control my-4">
        <div class="label">
          <span class="label-text">First Name</span>
        </div>
        <input asp-for="FirstName" type="text" placeholder="Type here" class="input input-bordered" />
      </label>

      <label class="form-control my-4">
        <div class="label">
          <span class="label-text">Last Name</span>
        </div>
        <input asp-for="LastName" type="text" placeholder="Type here" class="input input-bordered" />
      </label>

      <label class="form-control my-4">
        <div class="label">
          <span class="label-text">Email</span>
        </div>
        <input asp-for="Email" class="input input-bordered" placeholder="Bio"></input>
      </label>

      <button type="submit" class="btn btn-primary w-full">Add</button>
    </div>
  </div>
</form>
